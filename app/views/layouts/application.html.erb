<!DOCTYPE html>
<html>
  <head>
    <title>Photoflash</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="header">
      <nav class="navbar navbar-expand-lg navbar-light bg-primary fixed-top">
        <div class="container">

          <span class="navbar-text">
            <h1>Berkley's Blog</h1>
          </span>

          <% if current_user %>
            <ul class="navbar-nav">
              <li class="nav-item"><%= current_user.email %></li>
              <li class="nav-item"><%= link_to "Log Out", logout_path, method: "delete", :class => 'btn btn-dark' %></li>
            </ul>
          <% else %>
            <ul class="navbar-nav">
              <li class="nav-item"><%= link_to "Log In", 'login', :class => 'btn btn-light' %></li>
              <li class="nav-item"><%= link_to "Sign Up", 'signup', :class => 'btn btn-dark'%></li>              
            </ul>
         <%end%>

        </div>
      </nav>
    </div>

    <div class ="body">
      <div class="container">
        <%= yield %>
      </div>
    </div>

    
  </body>
</html>
