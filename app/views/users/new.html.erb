<div>

<%= form_for(@user) do |u| %>

    <% if @user.errors.any? %>
        <div>
        <h2>Errors:<h2>
        <ul>
            <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
                
            <% end %>
        </ul>
        </div>
    <% end %>
    <div>
        <%= u.text_field :first, :placeholder => "First Name" %>
        <%= u.text_field :last, :placeholder => "Last Name" %>
        <%= u.text_field :email, :placeholder => "Email" %>
        <%= u.password_field :password, :placeholder => "Password" %>
        <%= u.submit "Sign Up"%>
    </div>
<%end%>

<%= link_to 'Back', posts_path %>

</div>